<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_view_item_margin_left_in_side_drawer"
        android:layout_marginTop="@dimen/list_view_item_margin_top_in_side_drawer"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list_item_Image"
            android:layout_width="@dimen/option_image_width_in_side_drawer"
            android:layout_height="@dimen/option_image_height_in_side_drawer" />

        <TextView
            android:id="@+id/list_item_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/list_view_text_margin_left_in_side_drawer" />
    </LinearLayout>
</LinearLayout>